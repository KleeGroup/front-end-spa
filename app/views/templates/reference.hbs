{{#if isEdit}}
      <td>{{id}}</td>
      <td>{{input_for "name" isNoLabel="true"}}</td>
      <td>{{input_for "translationKey" isNoLabel="true"}}</td>
      <td>
      	<div class="btn-group">
	           	{{button "" icon="times" id="cancel" class="btn-default"}}
		    {{button "" type='submit' icon='check' class="btn-success"}}
	     </div>
	</td>
{{else}}
      <td>{{id}}</td>
      <td>{{name}}</td>
      <td>{{translationKey}}</td>
      <td>
      	<div class="btn-group">
      		<button class="btn btn-danger  ">{{t "Delete"}}</button>
      		<button class="btn btn-primary" id="edit">{{t "Edit"}}</button>
      	</div>
      </td>
{{/if}}